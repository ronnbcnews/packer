{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
    "aws_secret_key": "{{env `AWS_SECRET_KEY`}}",
    "sg_id": "{{env `SG_ID`}}",
    "subnet_id": "{{env `SUBNET_ID`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-west-2",
    "source_ami": "ami-8326c0e3",
    "instance_type": "t2.micro",
    "ssh_username": "enbeesee",
    "ami_name": "{{isotime |clean_ami_name}}_CentOS_7_2-mpxgo",
    "ssh_pty": "true",
    "security_group_id": "{{user `sg_id`}}",
    "subnet_id": "{{user `subnet_id`}}"
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "../hiera/",
      "destination": "/tmp/"
    },
    {
      "type": "file",
      "source": "../puppet/",
      "destination": "/tmp/"
    },
    {
      "type": "puppet-masterless",
      "manifest_file": "../puppet/environments/production/manifests/mpxgo.pp",
      "module_paths": [
        "../puppet/environments/production/modules"
        ],
      "hiera_config_path": "../hiera",
      "facter": {
        "hostgroup": "mpxgo"
      }
    },
    {"type": "file",
    "source": "cleanup.inc",
    "destination": "/tmp/cleanup.inc"},
    {"type": "shell",
    "execute_command": "{{.Vars}} sudo -S -E bash '{{.Path}}'",
    "scripts": [
      "aws_clean.bash"]},
    {"type": "shell",
      "execute_command": "{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "deploy.bash"]},
    {"type": "file",
    "source": "mpxgo.bin",
    "destination": "/opt/mpxgo/webroot/mpxgo.bin"}
  ]

}

