{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-west-2",
    "source_ami": "ami-8326c0e3",
    "instance_type": "t2.micro",
    "ssh_username": "enbeesee",
    "ami_name": "CentOS_7_2-mpxgo_{{isotime |clean_ami_name}}",
    "ssh_pty": "true",
    "security_group_id": "sg-306b1d55",
    "subnet_id": "subnet-825691f5"
  }],
  "provisioners": [
    {"type": "file",
    "source": "scripts/cleanup.inc",
    "destination": "/tmp/cleanup.inc"},
    {"type": "shell",
    "execute_command": "{{.Vars}} sudo -S -E bash '{{.Path}}'",
    "scripts": [
      "scripts/aws_clean.bash"]},
    {"type": "shell",
      "execute_command": "{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "scripts/deploy.bash"]},
    {"type": "file",
    "source": "mpxgo.bin",
    "destination": "/opt/mpxgo/webroot/mpxgo.bin"}]

}

